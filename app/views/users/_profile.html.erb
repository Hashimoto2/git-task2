<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	<tr>
		<th>follows</th>
		<th><%=link_to user.follower.count, user_followers_path(user_id: user.id)%></th>
	</tr>
	<tr>
		<th>followers</th>
		<th><%=link_to user.followed.count, user_follows_path(user_id: user.id) %></th>
	</tr>
</table>

