<% if @model == "user" %>
<div class="row  justify-content-center">
  <h2>Users search for '<%= @content %>'</h2>
</div>
  <table class="table">
    <thead>
        <tr>
          <th>image</th>
		      <th>name</th>
		      <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
      <div class="row  justify-content-center">
        <% @datas.each do |datas| %>
          <tr>
            <td>
              <%= link_to user_path(datas) do %>
                <%= attachment_image_tag(datas, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
              <% end %>
            </td>
            <td>
              <%= link_to datas.name, user_path(datas.id) %>
            </td>
          </tr>
      </div>
    </tbody>
  </table>
<% end %>

<% elsif @model == "book"%>
<div class="row  justify-content-center">
  <h2>Books search for '<%= @content %>'</h2>
</div>
  <table class="table">
    <thead>
      <tr>
        <th></th>
		    <th>Title</th>
		    <th>Opinion</th>
		    <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <div class="row  justify-content-center"></div>
        <% @datas.each do |datas| %>
          <tr>
            <td>
		          <%= link_to user_path(datas.user) do %>
			          <%= attachment_image_tag(datas.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
		          <% end %>
		        </td>
		        <td><%= link_to datas.title, book_path(datas.id), class: "book_#{datas.id}" %></td>
		        <td><%= datas.body %></td>
          </tr>
        <% end %> 
    </tbody>
  </table>
</div>
<% else %>
<% end %>
